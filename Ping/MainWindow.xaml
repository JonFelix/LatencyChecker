<Window x:Name="window" x:Class="Ping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ping"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize" Closing="WindowClosing">
        Title="MainWindow" Height="350" Width="525">

    <Grid>

        <Menu x:Name="menu" HorizontalAlignment="Right" Height="311" VerticalAlignment="Top" Width="499" Margin="0,0,10,0">
            <MenuItem Header="File" Margin="0">
                <MenuItem Header="Preferences" Width="100" Click="ClickMenuPreferences"/>
            </MenuItem>
            <TextBox x:Name="textBox" TextWrapping="Wrap" IsReadOnly="True" Cursor="Arrow" Width="517" Margin="0,217,0,2" />
        </Menu>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>     
        <local:ConstantChangesChart x:Name="Chart"/>
        <Separator Grid.Row="1" />
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True" Grid.Row="2">
            <TextBox BorderBrush="transparent" Text="{Binding PingList, ElementName=window}" />
        </ScrollViewer>  
    </Grid>
</Window>
